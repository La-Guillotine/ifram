{% extends 'base.html.twig' %}

{% block title %}Plantes{% endblock %}

{% block body %}
    <h1>Plante index</h1>
    <div class="container">
        <ul class="table">
            {% for plante in plantes %}
                <li class="cart">
                    <a href="{{ path('plante_show', {'id': plante.id}) }}">{{plante.nom}}</a>
                </li>
            {% else %}
                <p>no records found</p>
            {% endfor %}
        </ul>
    </div>
    <a class="btn btn-primary" href="{{ path('plante_new') }}">Ajouter une plante</a>
{% endblock %}
